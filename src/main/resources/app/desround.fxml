<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.desroundController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Label text="Left Half (L)" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="leftHalfField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Right Half (R)" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="rightHalfField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Subkey (K)" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="subkeyField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="Compute" onAction="#computeDESRound" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Left Half (L')" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Label fx:id="leftOutputLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Label text="Right Half (R')" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Label fx:id="rightOutputLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
</GridPane>
